generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Link {
  id            String    @id @default(cuid())
  originalUrl   String
  shortCode     String    @unique
  visits        Int       @default(0)
  createdAt     DateTime  @default(now())
  lastVisitedAt DateTime?
}